<Window
    x:Class="CrytonCoreNext.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:CrytonCoreNext.Views"
    xmlns:cryptingViews="clr-namespace:CrytonCoreNext.CryptingOptionsViews"
    xmlns:pdfViews="clr-namespace:CrytonCoreNext.PDF.Views"
    xmlns:viewModels="clr-namespace:CrytonCoreNext.ViewModels"
    xmlns:cryptingViewModels="clr-namespace:CrytonCoreNext.CryptingOptionsViewModels"
    xmlns:pdfViewModels="clr-namespace:CrytonCoreNext.PDF.ViewModels"
    Title="CrytonNXT"
    MinWidth="1600"
    MinHeight="670"
    d:DesignHeight="700"
    d:DesignWidth="1700"
    mc:Ignorable="d"
    WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Storyboard x:Key="UnFoldNavigationBar">
            <DoubleAnimation   
                Storyboard.Target = "{Binding ElementName=NavigationBar}"
                Storyboard.TargetProperty="Width"
                From="90"
                To="300"
                BeginTime="0:0:0"
                Duration="0:0:1.4"/>
        </Storyboard>

        <Storyboard x:Key="FoldNavigationBar">
            <DoubleAnimation   
                Storyboard.Target = "{Binding ElementName=NavigationBar}"
                Storyboard.TargetProperty="Width"
                From="300"
                To="90"
                BeginTime="0:0:0"
                Duration="0:0:0.2"/>
        </Storyboard>
    </Window.Resources>
    
     <Window.Background>
        <!--<SolidColorBrush Opacity="0.88" Color="#202048"/>-->
        <!--<SolidColorBrush Opacity="0.88" Color="{DynamicResource backgroundColor}"/>-->
        <SolidColorBrush Opacity="0.88" Color="#FA202048"/>
    </Window.Background>

    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type viewModels:HomeViewModel}">
                <views:HomeView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:CryptingViewModel}">
                <views:CryptingView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type pdfViewModels:PdfManagerViewModel}">
                <pdfViews:PdfManagerView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type pdfViewModels:PdfMergeViewModel}">
                <pdfViews:PdfMergeView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type pdfViewModels:PdfSplitViewModel}">
                <pdfViews:PdfSplitView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type pdfViewModels:PdfImageToPdfViewModel}">
                <pdfViews:PdfImageToPdfView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:InformationPopupViewModel}">
                <views:InformationPage />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:ProgressViewModel}">
                <views:ProgressView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:FilesViewViewModel}">
                <views:FileViewView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:FilesSelectorListingViewViewModel}">
                <views:FilesSelectorListingView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:FilesSelectorViewViewModel}">
                <views:FilesSelectorView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:ImageViewerViewModel}">
                <views:ImageViewerView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type cryptingViewModels:AESViewModel}">
                <cryptingViews:AESView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type cryptingViewModels:RSAViewModel}">
                <cryptingViews:RSAView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:NavigationPDFViewViewModel}">
                <views:NavigationPDFView />
            </DataTemplate>
        </Grid.Resources>
        

        <ContentControl HorizontalAlignment="Stretch" Margin="90, 0, 0, 0" Content="{Binding ViewModel}"/>

        <views:NavigationBar x:Name="NavigationBar" HorizontalAlignment="Left" Width="300" DataContext="{Binding NavigationView}" />

        <ToggleButton Visibility="Hidden"
                      IsChecked="{Binding NavigationBarFolded}">

            <ToggleButton.Triggers>
                <EventTrigger RoutedEvent="ToggleButton.Checked">
                    <BeginStoryboard Storyboard="{StaticResource UnFoldNavigationBar}"/>
                </EventTrigger>

                <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                    <BeginStoryboard Storyboard="{StaticResource FoldNavigationBar}"/>
                </EventTrigger>
            </ToggleButton.Triggers>
        </ToggleButton>

    </Grid>
</Window>
