<Window
    x:Class="CrytonCoreNext.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:CrytonCoreNext.Views"
    xmlns:ViewModels="clr-namespace:CrytonCoreNext.ViewModels"
    Title="CrytonNXT"
    MinWidth="1800"
    d:DesignHeight="700"
    d:DesignWidth="1700"
    mc:Ignorable="d"
    WindowStartupLocation="CenterScreen">


    <Window.Background>
        <!--<SolidColorBrush Opacity="0.88" Color="#202048"/>-->
        <!--<SolidColorBrush Opacity="0.88" Color="{DynamicResource backgroundColor}"/>-->
        <SolidColorBrush Opacity="0.88" Color="#FA202048"/>
    </Window.Background>

    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type ViewModels:HomeViewModel}">
                <views:HomeView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type ViewModels:CryptingViewModel}">
                <views:CryptingView />
            </DataTemplate>
        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <views:NavigationBar Grid.Column ="0" DataContext="{Binding NavigationView}" />

        <ContentControl
            Grid.Column="1"
            Content="{Binding ViewModel}" />

    </Grid>
</Window>
