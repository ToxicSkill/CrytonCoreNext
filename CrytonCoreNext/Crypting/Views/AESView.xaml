        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <components:CryptingStatisticsControl Speed="{Binding Crypting.CryptingStatistics.Speed, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                  Strenght="{Binding Crypting.CryptingStatistics.Strenght, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                  Application="{Binding Crypting.CryptingStatistics.Application, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <ui:TextBlock Grid.Column="1"
                       Text="{Binding PageName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                       FontSize="78"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Center" />
        </Grid>
