<UserControl x:Class="CrytonCoreNext.Controls.PasswordStrenghtControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             x:Name="root"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="root_Loaded">
    
    <Grid x:Name="strenghtGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Column="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Height="15" RadiusX="5" RadiusY="5" Margin="10,15">
            <Rectangle.Fill>
                <SolidColorBrush Color="{DynamicResource SystemAccentColorPrimary}" Opacity="0.3"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Height="15" RadiusX="5" RadiusY="5" Margin="10,5">
            <Rectangle.Fill>
                <SolidColorBrush Color="{DynamicResource SystemAccentColorPrimary}" Opacity="0.5"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle Grid.Column="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Height="15" RadiusX="5" RadiusY="5" Margin="10,5">
            <Rectangle.Fill>
                <SolidColorBrush Color="{DynamicResource SystemAccentColorPrimary}" Opacity="0.7"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle Grid.Column="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Height="15" RadiusX="5" RadiusY="5" Margin="10,5">
            <Rectangle.Fill>
                <SolidColorBrush Color="{DynamicResource SystemAccentColorPrimary}" Opacity="0.8"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle Grid.Column="4" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Height="15" RadiusX="5" RadiusY="5" Margin="10,5">
            <Rectangle.Fill>
                <SolidColorBrush Color="{DynamicResource SystemAccentColorPrimary}" Opacity="0.9"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle Grid.Column="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Height="15" RadiusX="5" RadiusY="5" Margin="10,5">
            <Rectangle.Fill>
                <SolidColorBrush Color="{DynamicResource SystemAccentColorPrimary}"/>
            </Rectangle.Fill>
        </Rectangle>
    </Grid>
</UserControl>
